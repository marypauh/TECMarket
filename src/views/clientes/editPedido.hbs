<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Pedido</h3>
        </div>
        <div class="card-body">
            <form action="/pedidos/edit-pedido/{{pedido._id}}?_method=PUT" method="POST">
                 <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="Id Pedido" class= "form-control" placeholder="Id Pedido"
                    value = "{{pedido.idPedido}}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="Origen" class= "form-control" placeholder="Origen" value = "{{vuelo.origen}}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="Destino" class= "form-control" placeholder="Destino" value = "{{vuelo.destino}}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="IdAerolinea" class= "form-control" placeholder="Id Aerolinea" value = "{{vuelo.idAerolinea}}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="FechaSalida" class= "form-control" placeholder="Fecha de Salida" value = "{{vuelo.fechaSalida}}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="FechaLlegada" class= "form-control" placeholder="Fecha de Llegada" value = "{{vuelo.fechaLlegada}}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="Precio" class= "form-control" placeholder="Precio" value = "{{vuelo.precio}}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="Restricciones" class= "form-control" placeholder="Restricciones" value = "{{vuelo.restricciones}}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="ServiciosBrindados" class= "form-control" placeholder="Servicios Brindados" value = "{{vuelo.serviciosBrindados}}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="Estado" class= "form-control" placeholder="Estado" value = "{{vuelo.estado}}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="CapacidadMax" class= "form-control" placeholder="CapacidadMax" value = "{{vuelo.capacidadMax}}"/>
                </div>
                <div class="form-group">
                    <input type = "text" name = "BoletosDisp" class= "form-control" placeholder="Boletos Disponibles"  value = "{{vuelo.boletosDisp}}"/>
                </div>
                <div class="form-group">
                    <button class= "btn btn-primary btn-block" type="submit">
                        Actualizar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>