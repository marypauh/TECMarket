<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Create Order</h3>
    </div>
    <div class="card-body">
      <form action="/orders/new" method="POST">
      <div class="form-group">
          <input type="text" name="Market" class="form-control" placeholder="Market" value = "{{market.name}}"/>
        </div>
        <div class="form-group">
          <input type="text" name="idOrd" class="form-control" placeholder="ID order" autofocus/>
        </div>
        <div class="form-group">
          <input type="text" name="username" class="form-control" placeholder="username" autofocus/>
        </div>
        <div class = "form-group">
            <input type = "date" name ="dateO" class= "form-control" placeholder="Date" autofocus/>
        </div>
        <div class = "form-group">
            <input type = "text" name = "hour" class= "form-control" placeholder="Hour" autofocus/>
        </div>
        <div class = "form-group">
            <input type = "text" name = "state" class= "form-control" placeholder="register/asigned/on-route/delivered" autofocus/>
        </div>
        <div class = "form-group">
            <input type = "text" name = "needs" class= "form-control" placeholder="Special Needs" autofocus/>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Add Products
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
